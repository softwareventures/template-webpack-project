{
  "name": "@softwareventures/template-webpack-project",
  "version": "0.0.0-development",
  "description": "Template for TypeScript webpack projects",
  "keywords": [
    "TypeScript",
    "template",
    "webpack"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/template-webpack-project",
  "bugs": "https://github.com/softwareventures/template-webpack-project/issues",
  "repository": "github:softwareventures/template-webpack-project",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "webpack --env production",
    "commit": "cz",
    "fix": "tsc && eslint . --fix && prettier --write .",
    "lint": "tsc && eslint . && prettier --check .",
    "postinstall": "husky install",
    "test": "ava"
  },
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "dependencies": {
    "@types/webpack-env": "1.18.0",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "@commitlint/cz-commitlint": "16.3.0",
    "@softwareventures/eslint-config": "5.1.5",
    "@softwareventures/precise-commits": "2.0.22",
    "@softwareventures/prettier-config": "3.0.0",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/webpack-config": "4.2.0",
    "@types/node": "17.0.45",
    "ava": "4.3.3",
    "commitizen": "4.2.5",
    "eslint": "8.23.1",
    "husky": "8.0.1",
    "inquirer": "9.1.2",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@3.2.3"
}
