{
  "name": "@softwareventures/template-webpack-project",
  "version": "0.0.0-development",
  "description": "Template for TypeScript webpack projects",
  "keywords": [
    "TypeScript",
    "template",
    "webpack"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/template-webpack-project",
  "bugs": "https://github.com/softwareventures/template-webpack-project/issues",
  "repository": "github:softwareventures/template-webpack-project",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "webpack --env production",
    "commit": "cz",
    "fix": "tsc && eslint . --fix && prettier --write .",
    "postinstall": "husky",
    "lint": "tsc && eslint . && prettier --check .",
    "prepack": "tsc",
    "start": "webpack serve --open",
    "test": "ava"
  },
  "engines": {
    "node": ">=20.6"
  },
  "dependencies": {
    "@types/webpack-env": "1.18.8",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/cz-commitlint": "19.8.1",
    "@softwareventures/eslint-config": "9.2.0",
    "@softwareventures/precise-commits": "4.0.21",
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "5.1.0",
    "@softwareventures/webpack-config": "6.0.0",
    "@types/node": "17.0.45",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "8.35.0",
    "ava": "6.4.0",
    "commitizen": "4.3.1",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsdoc": "50.8.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sonarjs": "2.0.4",
    "husky": "9.1.7",
    "inquirer": "9.3.7",
    "pinst": "3.0.0",
    "prettier": "3.6.1",
    "semantic-release": "23.1.1",
    "semantic-release-pinst": "1.0.4",
    "ts-loader": "9.5.2",
    "tsimp": "2.0.12",
    "typescript": "5.8.3",
    "webpack": "5.99.9",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "ava": {
    "concurrency": 1,
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "packageManager": "yarn@4.9.2",
  "publishConfig": {
    "access": "public"
  }
}
